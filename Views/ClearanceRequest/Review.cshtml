@model LibraryClearance.Models.ClearanceRequest

@{
    ViewData["Title"] = "Review Request";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5>@Html.DisplayFor(model => model.Title)</h5>
            </div>
            <div class="card-body">
                <p><strong>Requester:</strong> @Html.DisplayFor(model => model.RequesterName) (@Html.DisplayFor(model => model.Email))</p>
                <p><strong>Department:</strong> @Html.DisplayFor(model => model.Department), @Html.DisplayFor(model => model.Campus)</p>
                <p><strong>Purpose:</strong> @Html.DisplayFor(model => model.ClearancePurpose)</p>
                <p><strong>Article:</strong> @Html.DisplayFor(model => model.ArticleTitle)</p>
                <p><strong>Authors:</strong> @Html.DisplayFor(model => model.Authors)</p>
                <p><strong>Journal:</strong> @Html.DisplayFor(model => model.JournalTitle)</p>
                <p><strong>Submitted:</strong> @Html.DisplayFor(model => model.SubmittedDate)</p>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h5>Admin Review</h5>
            </div>
            <div class="card-body">
                <form asp-action="Review" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Decision</label>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" value="@LibraryClearance.Models.RequestStatus.Approved" id="approved" />
                                <label class="form-check-label" for="approved">
                                    Approve Request
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" value="@LibraryClearance.Models.RequestStatus.Rejected" id="rejected" />
                                <label class="form-check-label" for="rejected">
                                    Reject Request
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="adminComments" class="form-label">Comments</label>
                        <textarea name="adminComments" id="adminComments" class="form-control" rows="4" 
                                  placeholder="Add your comments here..."></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">View Full Details</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>