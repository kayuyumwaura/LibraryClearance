@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Copyright Clearance Request System</h1>
    
    @if (!User.Identity.IsAuthenticated)
    {
        <p class="lead">Please log in to submit copyright clearance requests.</p>
        <div class="mt-4">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">Login</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-lg">Register</a>
        </div>
    }
    else
    {
        <p class="lead">Welcome! You can now submit and track your copyright clearance requests.</p>
        <div class="mt-4">
            <a asp-controller="ClearanceRequests" asp-action="Create" class="btn btn-primary btn-lg">Submit New Request</a>
            <a asp-controller="ClearanceRequests" asp-action="Index" class="btn btn-outline-primary btn-lg">View My Requests</a>
        </div>
        
        @if (ViewBag.IsAdmin == true)
        {
            <div class="mt-3">
                <h4>Admin Actions</h4>
                <a asp-controller="ClearanceRequests" asp-action="Index" class="btn btn-success">Review All Requests</a>
            </div>
        }
    }
</div>